---
import { useTranslations } from "../i18n";
import { type Events, type Lang } from '../types';
import Event from './Event.astro';

interface Props {
	events: Events
  lang: Lang
}

const { lang, events } = Astro.props;

const t = useTranslations(lang);
---

<div class="w-full">
  <h2 class="text-gray-300 text-sm md:text-xl font-semibold uppercase text-center">
    {t('theBeginning')}
  </h2>
  <div>
    {events.map(event => (
      <Event lang={lang} event={event} />
      ))}
  </div>
  <p class="text-gray-300 text-sm md:text-xl font-semibold  uppercase text-center">
    {t('theEnd')}
  </p>
</div>
