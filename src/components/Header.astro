---
import { LANGUAGES } from "../const";
import type { Lang } from "../types";

interface Props {
  lang: Lang;
}

const { lang: currentLang } = Astro.props;

---

<header class="w-full flex py-3 px-6">
  <div class="container mx-auto flex justify-end">
    <ul class="flex items-center">
    {
      LANGUAGES.map((lang) => (
        <li class="md:first-of-type:mr-2 uppercase">
          <a
          class={`text-sm md:text-lg p-1 text-gray-400 ${
            currentLang === lang ? "font-bold" : "font-normal"
          }`}
          href={lang === "de" ? "/" : `/${lang}`}
          >
          {lang}
          </a>
        </li>
        ))
      }
    </ul>
  </div>
</header>
