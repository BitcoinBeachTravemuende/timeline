---
import { LANGUAGES } from "../const";
import type { Lang } from "../types";

interface Props {
  lang: Lang;
}

const { lang: currentLang } = Astro.props;

---

<header class="container flex justify-end py-3 px-6">
  <ul class="flex items-center">
    {
      LANGUAGES.map((lang) => (
        <li class="first-of-type:mr-2 uppercase">
          <a
            class={`text-xl4 ${
              currentLang === lang ? "font-bold" : "font-normal"
            }`}
            href={lang === "de" ? "/" : `/${lang}`}
          >
            {lang}
          </a>
        </li>
      ))
    }
  </ul>
</header>
